<Window x:Class="FitnessWPFClient.ReserveerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reserveer" Height="250" Width="300">

    <Grid Margin="10">
        <TextBlock Text="Kies een datum:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10,0,5"/>

        <DatePicker Name="ReservationDatePicker" Width="260" Height="35" HorizontalAlignment="Center" Margin="0,40,0,60"/>

        <Button Content="Volgende" Width="260" Height="30" HorizontalAlignment="Center" Margin="0,80,0,10" Click="NextButton_Click"/>
    </Grid>
</Window>
