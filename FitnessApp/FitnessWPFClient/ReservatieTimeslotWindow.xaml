<Window x:Class="FitnessWPFClient.ReservatieTimeslotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reservatie Timeslot" Height="400" Width="400">

	<Grid Margin="20">
		<StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
			<TextBlock Text="Stap 1: Kies een tijdslot:" Margin="0,0,0,5" />
			<ComboBox Name="TimeslotComboBox" Width="250" Height="30" Margin="0,0,0,20" />

			<TextBlock Text="Stap 2: Kies een toestel:" Margin="0,0,0,5" />
			<ComboBox Name="EquipmentComboBox" Width="250" Height="30" Margin="0,0,0,20" />

			<Button Content="+" Width="50" Height="30" HorizontalAlignment="Left" Margin="0,0,0,20" Click="AddTimeslotButton_Click" />

			<Button Content="Maak Reservatie" Width="250" Height="40" HorizontalAlignment="Left" Click="ConfirmButton_Click" />
		</StackPanel>
	</Grid>
</Window>
